@model FitnessClub.Models.CabinetViewModels.EditViewModel
@{
    ViewBag.Title = "Кабинет пользователя";
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<form asp-action="Edit" asp-controller="Cabinet">
    <div class="form-group">
        <label asp-for="@Model.Email" class="control-label">Email</label>
        <input type="text" asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Name" class="control-label">Имя</label>
        <input type="text" asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Surname" class="control-label">Фамилия</label>
        <input type="text" asp-for="@Model.Surname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Weight" class="control-label">Вес</label>
        <input type="number" asp-for="@Model.Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Height" class="control-label">Рост</label>
        <input type="number" asp-for="@Model.Height" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description" class="control-label">Состояние здоровья</label>
        <input type="text" asp-for="@Model.Description" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save changes" class="btn btn-default" />
    </div>
    @*<a class="btn btn-sm btn-primary" >Save changes</a>*@
</form>
